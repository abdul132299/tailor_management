<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:background="@drawable/img6">

    <LinearLayout
        android:paddingTop="15dp"
        android:paddingRight="24dp"
        android:paddingLeft="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

       <TextView
           android:layout_width="fill_parent"
           android:layout_height="wrap_content"
           android:textColor="#f23557"
           android:text="Sign Up"
           android:textSize="70dp"
           android:textStyle="bold"
           android:layout_gravity="center_horizontal"
           android:gravity="center"/>
        <EditText
            android:id="@+id/Edit_text_name"
            android:textColor="#000"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittextstyle"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:hint="Name"
            android:textColorHint="#000"/>

        <EditText
        android:id="@+id/Edit_text_username"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:hint="Username"
            android:textColorHint="#000"/>

        <EditText
            android:id="@+id/Edit_text_password"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:hint="Password"
            android:textColorHint="#000"/>

        <EditText
            android:id="@+id/Edit_text_reenter_password"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:hint="Re-enter Password"
            android:textColorHint="#000"/>

        <EditText
            android:id="@+id/Edit_text_email"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:hint="Email Address"
            android:textColorHint="#000"/>

        <EditText
            android:id="@+id/Edit_text_email_password"
            android:textColor="#000"
            android:layout_marginLeft="10dp"
            android:background="@drawable/edittextstyle"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:gravity="center"
            android:hint="Email Password"
            android:textColorHint="#000"/>


        <Button
            android:id="@+id/submit_button"
            android:background="@drawable/buttonstyleselector"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="Submit"
            android:textColor="#fff"/>
    </LinearLayout>
    </ScrollView>

